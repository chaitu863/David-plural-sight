//passing values to function

function passmsg(msg, secmsg){
    console.log(msg, secmsg);
}
passmsg('string is here', 'second string')
passmsg(true, false);
passmsg(30.45, 56.56);

// Return in function

function rerunsometing(num){
  let are= num * num;
  return are;
}
rerunsometing(2);
console.log(rerunsometing(2));

